<% include ./partials/header.ejs %>

<div class="container">
	<div class="jumbotron text-center">
		<h1>Add a new Snap</h1>
		<p><a href="/snaps">Go back</a></p>
	</div>
	<div class="container w-50">
		<form action="/snaps" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="title">Title</label>
				<input type="text" class="form-control" name="title">
			</div>

			<div class="form-group">
				<label for="imgurl">Image URL</label>
				<input type="text" class="form-control" name="imgurl" placeholder="Insert a URL">
			</div>
			<p class="lead text-center">OR</p>
			<div class="form-group">
				<label for="image">Upload an image</label>
				<input type="file" class="form-control" name="image">
			</div>
			<input type="submit" class="btn btn-primary" value="Send">
		</form>
	</div>

</div>

<% include ./partials/footer.ejs %>