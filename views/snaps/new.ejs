<% include ../partials/header.ejs %>

<div class="container-fluid p-0">
	<div class="jumbotron text-center">
		<h1>Add a new Snap</h1>
		<p><a href="/snaps">or go back</a></p>
	</div>
</div>
<div class="container">
	<div class="row justify-content-center">
			<div class="col-sm-12 col-md-6 col-lg-5">
				<form action="/snaps" method="post" enctype="multipart/form-data">
					<div class="form-group">
						<label for="title">Snap title</label>
						<input type="text" class="form-control" id="title" name="title">
					</div>

					<ul class="nav nav-tabs" role="tablist">
						<li class="nav-item">
							<a class="nav-link active" id="first-tab" data-toggle="tab" href="#first" role="tab" aria-controls="first" aria-selected="true">Insert an URL</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" id="second-tab" data-toggle="tab" href="#second" role="tab" aria-controls="second" aria-selected="false">Upload an image</a>
						</li>
						
					</ul>
					<div class="tab-content">
						<div class="tab-pane fade show active" id="first" role="tabpanel" aria-labelledby="first-tab">
							<div class="form-group mt-3">
								<input type="text" class="form-control" name="imgurl" placeholder="Insert a URL">
							</div>
						</div>
						<div class="tab-pane fade" id="second" role="tabpanel" aria-labelledby="second-tab">
							<div class="form-group mt-3">
								<input type="file" class="form-control" name="image">
							</div>
						</div>
					</div>
					<input type="submit" class="btn btn-primary" value="Send">
				</form>
			</div>
	</div>
</div>

<% include ../partials/footer.ejs %>